<% path = @refueling.persisted? ? edit_refueling_path : refueling_index_path %>

<%= form_for @refueling, url: path do |f| %>
  <div class='flex flex-col md:flex-row'>
    <div class='flex-1 md:mr-8'>
      <div>
        <div class='flex' data-reflex='change->VacationReflex#count_days'>
          <div class='flex-1 mb-4 mr-2'>
            <%= f.label :liters, class: 'label' %>
            <%= f.text_field :liters, class: 'input' %>
          </div>

          <div class='flex-1 mb-4'>
            <%= f.label :kilometers, class: 'label' %>
            <%= f.text_field :kilometers, class: 'input' %>
          </div>
        </div>

        <div class='flex-1 mb-4'>
          <%= f.label :avg_fuel_consumption, class: 'label' %>
          <%= f.text_field :avg_fuel_consumption, readonly: true, class: 'input bg-gray-100 cursor-not-allowed' %>
        </div>

        <div class='flex-1 mb-4'>
          <%= f.label :cost, class: 'label' %>
          <%= f.text_field :cost, class: 'input' %>
        </div>
      </div>
    </div>

    <div class='flex-1'>
      <div class='mb-4'>
        <%= f.label :note, class: 'label' %>
        <%= f.text_area :note, rows: 10, class: 'input' %>
      </div>
    </div>
  </div>

  <%= f.submit 'Submit', class: 'btn btn-green btn-outline' %>
<% end %>
