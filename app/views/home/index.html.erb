<%= link_to 'Add refueling', new_refueling_path, class: 'btn btn-lg btn-green btn-outline mb-4' %>

<% if @refuelings.any? %>
  <div class='flex flex-col'>
    <div class='self-end mb-2 text-lg font-semibold'>Total average: <%= (@refuelings.sum(:avg_fuel_consumption).to_f / @refuelings.size).round(2) %></div>
    <%= render @refuelings %>
  </div>
<% else %>
  <div class='flex items-center justify-center w-full h-40 italic text-gray-500 border rounded'>
    Nothing to display 🤷🏻‍♂️
  </div>
<% end %>
