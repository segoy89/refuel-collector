<header class="mb-4">
  <nav class="flex flex-wrap items-center justify-between px-3 py-3 text-gray-700 border-b md:px-10">
    <div id='logo' class="flex items-center mr-6 flex-no-shrink">
      <%= link_to "⛽️ Refuelings Collector", root_path, class:"link text-2xl" %>
    </div>
    <div class="md:hidden">
      <button id='hamburger' class="flex items-center px-3 py-2 border border-gray-500 rounded text-grey hover:text-gray-600 hover:border-gray-600">
        <svg class="w-3 h-3 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
      </button>
    </div>
    <div class="items-center block w-full text-center md:flex-1 md:flex md:text-left">
      <div class="md:flex-grow">
        <!-- link -->
      </div>
      <div id='mobileNav' class="hidden items-center block w-full mt-2 text-center md:flex md:flex-row md:flex-1 md:mt-0 md:text-left md:justify-end">
        <% if user_signed_in? %>
          <%= link_to "Edit account", edit_user_registration_path, class: "btn btn-default mb-2 md:mr-2 md:mb-0 block" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"btn btn-red mb-2 md:mb-0 block" %>
        <% end %>
      </div>
    </div>
    <button id='switchTheme' title='Switch theme color' class='md:ml-4 text-2xl w-10' data-controller='theme' data-action='click->theme#switchColor'>
      <%= current_user&.light_theme? ? '☾' : '☀' %>
    </button>
  </nav>
</header>
